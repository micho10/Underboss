<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.nekosoft.underboss" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".army.CreateArmyListActivity"
            android:label="@string/title_activity_create"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jp.co.nekosoft.underboss.MainActivity" />
        </activity>
        <activity
            android:name=".collection.CollectionActivity"
            android:label="@string/title_activity_collection"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jp.co.nekosoft.underboss.MainActivity" />
        </activity>
        <activity
            android:name=".battle.BattleDiaryActivity"
            android:label="@string/title_activity_battle_diary" >
        </activity>
        <activity
            android:name=".battle.BattleReportView"
            android:label="Battle Report"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".reference.ReferenceActivity"
            android:label="@string/title_activity_reference" >
        </activity>
    </application>

</manifest>
